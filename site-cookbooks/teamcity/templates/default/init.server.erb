#!/bin/sh -e

export TEAMCITY_DATA_PATH="<%= node[:teamcity][:data_path] %>"

cd <%= node[:teamcity][:path] %>

case $1 in
  start)
    su -c '<%= node[:teamcity][:path] %>/bin/teamcity-server.sh start' <%= node[:teamcity][:user] %>
  ;;
  stop)
    su -c '<%= node[:teamcity][:path] %>/bin/teamcity-server.sh stop' <%= node[:teamcity][:user] %>
  ;;
  restart)
    $0 stop && $0 start
  ;;
esac

exit 0
